<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Task Name"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewTaskNameLable"
        app:layout_constraintStart_toEndOf="@+id/textViewTaskNameLable" />


    <TextView
        android:id="@+id/textViewTaskArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Task Area"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewTaskAreaLable"
        app:layout_constraintStart_toEndOf="@+id/textViewTaskAreaLable" />


    <TextView
        android:id="@+id/textViewContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ContactName"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewContactNameLable"
        app:layout_constraintStart_toEndOf="@+id/textViewContactNameLable" />


    <TextView
        android:id="@+id/textViewContactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ContactNumber"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewContactNumberLable"
        app:layout_constraintStart_toEndOf="@+id/textViewContactNumberLable" />


    <TextView
        android:id="@+id/textViewDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Deadline"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewDeadlineLable"
        app:layout_constraintStart_toEndOf="@+id/textViewDeadlineLable" />


    <TextView
        android:id="@+id/textViewAcceptedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="AcceptedDate"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewAcceptedDateLable"
        app:layout_constraintStart_toEndOf="@+id/textViewAcceptedDateLable" />


    <TextView
        android:id="@+id/textViewTaskNameLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Task"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewTaskAreaLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Location"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskNameLable" />


    <TextView
        android:id="@+id/textViewContactNameLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Client"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskAreaLable" />


    <TextView
        android:id="@+id/textViewContactNumberLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Contact"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContactNameLable" />


    <TextView
        android:id="@+id/textViewDeadlineLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Deadline"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContactNumberLable" />


    <TextView
        android:id="@+id/textViewAcceptedDateLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Accepted at"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeadlineLable" />


    <ScrollView
        android:id="@+id/ScrollViewChat"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/textSuperWhite"
        app:layout_constraintBottom_toTopOf="@+id/editTextMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:id="@+id/tableLayoutChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground">

        </TableLayout>
    </ScrollView>


    <ImageButton
        android:id="@+id/button4"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/windowBackground"
        android:onClick="sendMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/send" />


    <Button
        android:id="@+id/buttonCompleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="psudoAction"
        android:text="complete"
        app:layout_constraintBottom_toTopOf="@+id/ScrollViewChat"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="Type your message here.."
        android:inputType="text"
        android:textColor="@color/textColorSecondary"
        android:textSize="18sp"
        android:theme="@style/editTextTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewDescriptionLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="Description"
        android:textColor="@color/textColorSecondary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptedDateLable" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ScrollViewChat"
        app:layout_constraintEnd_toStartOf="@+id/buttonCompleteTask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewDescriptionLable"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionLable">


        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Description"
            android:textColor="@color/textColorSecondary" />


    </ScrollView>


</android.support.constraint.ConstraintLayout>
